<div id="class-schedule">
    <table id="class-schedule__table">
        <thead>
            <tr>
                <th>節次</th>
                <th>一</th>
                <th>二</th>
                <th>三</th>
                <th>四</th>
                <th>五</th>
                <th>六</th>
                <th>日</th>
            </tr>
        </thead>
        <tbody id="class-schedule__tbody">
            {% for period in schedule %}
                {% set i = loop.index-1 %}
                <tr>
                    <td>
                        {{ period.periodName }}
                    </td>
                    {% for j in range(1, 8) %}
                        <td data-period="{{ i }}" data-weekday="{{ j }}"
                            {% if period.week[j-1] %}
                                class="on"
                            {% endif %}
                        >
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% if isHost %}
        <div class="flex flex-row gap-2 flex-align padding-2">
            <p id="class-schedule__tooltip" hidden>點擊格子即開啟/關閉</p>
            <button id="class-schedule__cancel" data-tooltip="取消" class="btn-red" hidden>{% include "svg/cross.svg" %}</button>
            <button id="class-schedule__save" data-tooltip="儲存" hidden>{% include "svg/save.svg" %}</button>
            <button id="class-schedule__edit" data-tooltip="編輯">{% include "svg/pen.svg" %}</button>
        </div>
    {% endif %}
</div>
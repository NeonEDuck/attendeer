<div class="prefab">
    <table>
        <tr class="attendee-row" data-id="">
            <td class="attendee-row__name"></td>
            <td class="attendee-row__email"></td>
        </tr>
    </table>
</div>

<dialog id="class-modal">
    <span id="modal-error-message">message</span>
    <div class="flex flex-column gap-4">
        <h1 id="class-modal__title">設定</h1>

        <button id="close-modal-btn" class="btn-round btn-red" data-tooltip="取消" data-tooltip-bottom>{% include 'svg/cross.svg' %}</button>
        <form id="close-modal__form" class="flex flex-column gap-4">
            <input id="class-modal__class-id" name="class-id" type="text" hidden>

            <fieldset>
                <legend>資訊</legend>
                <div class="field">
                    <label for="class-modal__class-name">課程名稱:</label>
                    <input id="class-modal__class-name" name="class-name" type="text" autocomplete="off" required>
                </div>
                <div class="field">
                    <label for="class-modal__school-select">時課表:</label>
                    <select id="class-modal__school-select" name="school-select">
                        <option value="" selected disabled></option>
                    </select>
                </div>
            </fieldset>
            <fieldset>
                <legend>警醒</legend>
                <div class="field">
                    <label for="class-modal__alert-interval">警醒間隔:</label>
                    <input id="class-modal__alert-interval" name="alert-interval" type="number" min="5" max="50" required>
                    <label for="class-modal__alert-interval">分鐘</label>
                </div>
                <div class="field">
                    <label for="class-modal__alert-time">警醒持續時間:</label>
                    <input id="class-modal__alert-time" name="alert-time" type="number" min="1" max="3" required>
                    <label for="class-modal__alert-time">分鐘</label>
                </div>
            </fieldset>
            <fieldset>
                <legend>參與者</legend>
                <div class="field">
                    <label for="attendee-input">Email:</label>
                    <input id="attendee-input" name="attendee-input" type="text" autocomplete="off">
                    <button type="button" id="add-attendee-btn" class="btn-primary">新增參與者</button>
                </div>
                <table id="attendee-table">
                    <thead>
                        <th>email</th>
                        <th>名字</th>
                    </thead>
                    <tbody></tbody>
                </table>
            </fieldset>
            <input type="submit" id="submit-form" hidden disabled/>
        </form>
        <div class="flex flex-row gap-2 flex-justify-end">
            <button type="button" id="submit-class" class="btn-primary">建立課程</button>
            <button type="button" id="submit-delete" class="btn-red" data-tooltip="刪除">{% include 'svg/trashcan.svg' %}</button>
            <button type="button" id="submit-setting" class="btn-primary" data-tooltip="儲存">{% include 'svg/save.svg' %}</button>
        </div>
    </div>
</dialog>

<dialog id="confirm-delete-modal">
    <h1>你確定要刪除此課程?</h1>
    <div class="flex flex-row gap-2 flex-justify-end">
        <button type="button" id="close-confirm-delete-modal-btn" class="btn-round btn-red" data-tooltip="取消">{% include 'svg/cross.svg' %}</button>
        <button type="button" id="confirm-delete" class="btn-red" data-tooltip="刪除">{% include 'svg/trashcan.svg' %}</button>
    </div>
</dialog>
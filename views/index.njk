{% extends 'util/base.njk' %}

{% block script %}
    <script src="/js/index.js" type="module" defer></script>
{% endblock script %}

{% block prefab %}
    <div class="class-card">
        <p class="class-card__name"></p>
        <p class="class-card__id"></p>
        <div class="class-card__btn-group">
            <button class="class-card__link btn-round btn-primary" data-tooltip="查看">{% include 'svg/right_arrow.svg' %}</button>
        </div>
    </div>
{% endblock prefab %}

{% block content %}
    <main>
        <div class="class-list">
            <div id="add-class-template" class="class-card-template flex-center flex-row" hidden>
                <button id="add-class-btn" class="btn-round btn-primary">新增課程</button>
            </div>
        </div>

        {% include "util/class_modal.njk" %}
    </main>
{% endblock content %}
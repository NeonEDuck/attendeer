{% extends "util/base.njk" %}

{% block script %}
    <script src="/js/meeting.js" type="module" defer></script>
    <script src="/js/test.js" type="module" defer></script>
{% endblock script %}

{% block navbar %}
{% endblock navbar %}

{% block prefab %}
    <div class="cam">
        <video class="cam__video" autoplay playsinline control=false></video>
        <img class="cam__profile" src="/imgs/dummy_profile.png" alt="profile_picture">
        <span class="cam__name"></span>
    </div>
    <li class="msg">
        <p>
            <span class="msg__user"></span>
            <span class="msg__timestamp"></span>
        </p>
        <p class="msg__text"></p>
    </li>
{% endblock prefab %}

{% block content %}
    <div id="meeting-panel">
        <div id="meeting-panel__left">
            <div id="video-tray">

                <button id="alert-btn">Click</button>

            </div>

            <div id="toolbar">
                {# <span id="call-id">{{ callId }}</span> #}
                <input id="call-id" type="text" value="{{ callId }}" hidden>
                {# <input id="call-input" type="text"> #}
                <button id="hang-up-btn" class="btn-red btn-round" disabled>{% include './svg/hang-up.svg' %}</button>
                <button id="message-btn" class="btn-primary btn-round">{% include './svg/message.svg' %}</button>
            </div>
        </div>

        <div id="meeting-panel__right">
            <div id="chat">
                <ul id="chat__room"></ul>

                <div id="chat__bar">
                    <input
                        id="msg-input"
                        name="msg-input"
                        type="text"
                        placeholder="Enter Message"
                        autocomplete="off"
                        required
                    />
                    <button id="send-msg-btn">send</button>
                </div>
            </div>
        </div>
    </div>

    <div id="confirm-panel" class="flex flex-row flex-center gap-2">
        <div id="confirm-panel__video-tray"></div>
        <button id="webcam-btn" class="btn-primary btn-round" disabled>{% include './svg/webcam.svg' %}</button>
        <button id="screen-share-btn" class="btn-primary btn-round" disabled>{% include './svg/screen-share.svg' %}</button>
        <button id="enter-btn" class="btn-round" disabled>{% include './svg/right-arrow.svg' %}</button>
    </div>
{% endblock content %}